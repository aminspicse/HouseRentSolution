        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".PasswordResetActivity"></activity>
        <activity android:name=".LandingActivity" />
        <activity android:name=".ViewPost" />
